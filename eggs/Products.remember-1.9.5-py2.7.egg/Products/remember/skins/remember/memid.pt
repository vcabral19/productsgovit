<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Member Id Widget  - only meant for 'id' field on member objects -->

    <metal:view_macro define-macro="view"
		      tal:replace="structure accessor" />

    <metal:define define-macro="edit">
      <metal:use use-macro="here/widgets/field/macros/edit">
	<input metal:fill-slot="widget_body"
	       type="text"
	       name=""
	       value=""
	       size="30"
               tal:define="myid python:request.get('id', here.getId())"
	       tal:attributes="name fieldName;
		               value python:test(here.plone_utils.isIDAutoGenerated(myid), '', myid);"
	       />
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/string/macros/edit" />
    </div>

  </body>

</html>

