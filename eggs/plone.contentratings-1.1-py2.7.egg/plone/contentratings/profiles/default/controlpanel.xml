<?xml version="1.0"?>
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone.contentratings">

 <configlet title="Ratings" action_id="contentratings"
    appId="plone.contentratings" category="Products"
    condition_expr="python:True"
    icon_expr="string:${portal_url}/++resource++plone.contentratings.resources/ratings_icon.png"
    i18n:attributes="title"
    url_expr="string:${portal_url}/contentratings-controlpanel"
    visible="True">
  <permission>Manage portal</permission>

  Add a controlpanel for content ratings settings

 </configlet>

</object>
